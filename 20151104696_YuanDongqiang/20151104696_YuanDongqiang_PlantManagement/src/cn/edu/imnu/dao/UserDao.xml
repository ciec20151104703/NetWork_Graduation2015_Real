<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.imnu.dao.UserDao">
	<!-- 查询用户 -->
	<select id="findUser" parameterType="String" resultType="user">
		select *
		from users
		<where>
			<if test="usercode != null and password !=null">
				and u_name = #{usercode} and u_pwd =#{password}
			</if>
			<if test="usercode != null and password == null">
				and u_name = #{usercode}
			</if>
		</where>
	</select>
	<!-- 查询邮箱 -->
	<select id="findUseremail" parameterType="String" resultType="user">
		select * from users where u_email = #{u_email}
	</select>
	<!-- 注册 -->
	<insert id="addUser" parameterType="user">
		insert into users(
		u_code,
		u_name,
		u_pwd,
		u_email,
		u_type
		)
		values(#{u_code},
		#{u_name},
		#{u_pwd},
		#{u_email},
		#{u_type}
		)
	</insert>
</mapper>